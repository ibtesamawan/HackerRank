#include <stdio.h>

int S(int n, int a, int b, int c) {
    if (n == 1) {
        return a;
    } else if (n == 2) {
        return b;
    } else if (n == 3) {
        return c;
    } else {
        return S(n - 1, a, b, c) + S(n - 2, a, b, c) + S(n - 3, a, b, c);
    }
}

int main() {
    int a, b, c, n;

    scanf("%d %d %d %d", &a, &b, &c, &n);

    int result = S(n, a, b, c);
    printf("%d", result);

    return 0;
}

#include <stdio.h>

int main() {
    int a;    // integer 1
    int b;    // integer 2
    float x;  // float 1
    float y;  // float 2

    scanf("%d", &a);
    scanf("%d", &b);
    scanf("%f", &x);
    scanf("%f", &y);

    printf("%d ", a + b);
    printf("\n");
    printf("%d\n", a - b);

    printf("%.1f ", x + y);
    printf("\n");
    printf("%.1f\n", x - y);


    return 0;
}
